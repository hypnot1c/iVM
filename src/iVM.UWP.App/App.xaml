<cm:CaliburnApplication
  x:Class="iVM.App"
  xmlns:cm="using:Caliburn.Micro"
  xmlns:conv="using:iVM.UWP.App.Resources.Converters"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  RequestedTheme="Light"
  >
  <cm:CaliburnApplication.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Themes/Default/Controls.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <conv:BooleanToVisibilityConverter x:Key="boolToVis" />
      <conv:EnumToListConverter x:Key="enumToList" />
      <conv:DecimalToStringConverter x:Key="decimalToStr" />
      <conv:DateTimeConverter x:Key="dateTimeToStr" />
    </ResourceDictionary>
  </cm:CaliburnApplication.Resources>
</cm:CaliburnApplication>
